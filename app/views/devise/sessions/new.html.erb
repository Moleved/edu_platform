<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
          <h2><%= I18n.t('login') %></h2>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>

            <div class="form-group">
              <%= f.label I18n.t('auth.email'), for: 'email-input' %>
              <%= f.email_field :email, id: 'email-input', class: 'form-control', autofocus: true, autocomplete: "email" %>
            </div>

            <div class="form-group">
              <%= f.label I18n.t('auth.password'), for: 'password-input' %>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, id: 'password-input', class: 'form-control', autocomplete: "current-password" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="form-check">
                <%= f.check_box :remember_me, id: 'remember-me', class: 'remember-me', value: '' %>
                <%= f.label I18n.t('auth.remember_me'), for: 'remember-me' %>
              </div>
            <% end %>

            <div class="actions">
              <%= f.submit I18n.t('confirm'), class: 'btn btn-primary' %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
