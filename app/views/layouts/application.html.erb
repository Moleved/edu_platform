<!DOCTYPE html>
<html>
  <head>
    <title>EduPlatform</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container-fluid">
      <div class="row">
        <nav class="navbar navbar-expand navbar-default">
          <div class="container-fluid">
            <div class="row">
              <div class="col-md-12">

                <div class="col-md-2">
                  <div class="navbar-header">
                    <%= link_to I18n.t('title'), root_path, class: 'navbar-brand' %>
                  </div>
                </div>

                <div class="col-md-2">
                  <ul class="nav navbar-nav">
                    <li class="dropdown">
                      <a class="dropdown-toggle" data-toggle="dropdown">Dropdown <b class="caret"></b></a>

                      <ul class="dropdown-menu" role="menu">
                        <li class="dropdown-header">Setting</li>
                        <li><a href="#">Action</a></li>
                        <li><a href="#">Another action</a></li>
                        <li><a href="#">Something else here</a></li>
                        <li class="divider"></li>
                        <li class="active"><a href="#">Separated link</a></li>
                        <li class="divider"></li>
                        <li class="disabled"><a href="#">One more separated link</a></li>
                      </ul>
                  </ul>
                </div>

                <% if current_user %>
                  <div class="col-md-7"></div>
                  <div class="col-md-1">
                    <%= link_to I18n.t('logout'), destroy_user_session_path, class: 'btn btn-danger navbar-btn', method: :delete %>
                  </div>
              <% else %>
                  <div class="col-md-6"></div>
                  <div class="col-md-2">
                    <%= link_to I18n.t('login'), new_user_session_path, class: 'btn btn-success navbar-btn' %>
                    <%= link_to I18n.t('signup'), new_user_registration_path, class: 'btn btn-success navbar-btn' %>
                  </div>
                <% end %>

              </div>
            </div>
          </div>
        </nav>
      </div>
      <div class="row">
        <div class="col-md-12">

          <% if notice %>
            <div class="alert alert-info alert-dismissable">
              <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
              <strong>Well Done!</strong>
              <p><%= notice %></p>
            </div>
          <% end %>

          <% if alert %>
            <div class="alert alert-danger">
              <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
              <strong>Oh snap!</strong>
              <p><%= alert %></p>
            </div>
          <% end %>

          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
